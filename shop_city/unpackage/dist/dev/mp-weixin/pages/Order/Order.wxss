.order-list {
  padding: 30rpx;
}
.order-list .order-item {
  padding: 15rpx;
  display: flex;
  margin-top: 20rpx;
  border: 1px solid #eee;
  border-radius: 15rpx;
  height: 150rpx;
  justify-content: space-between;
  align-items: center;
  height: 15vh;
}
.order-list .order-item .img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.order-list .order-item .img ._img {
  display: block;
  width: 100%;
  height: 100%;
}
.order-list .order-item .desc {
  width: 70%;
  font-size: 12px;
  color: #9f9f9f;
  margin: 0 20rpx;
}
.order-list .order-item .num-price {
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.order-list .order-item .num-price .price {
  color: #c72f1e;
}
.order-list .order-item .num-price .num {
  margin-top: 30rpx;
  color: #000;
}

