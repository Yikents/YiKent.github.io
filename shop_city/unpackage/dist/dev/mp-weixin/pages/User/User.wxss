.user-box {
  width: 100vw;
  height: 100vh;
  background-color: #f0f3f6;
}
.user-box .login-active .user-info-wrap {
  background-image: url(https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fimg.5tu.cn%2Fattachments%2Fimage_files%2Fmonth_1905%2F201904291406036537.jpg&refer=http%3A%2F%2Fimg.5tu.cn&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=auto?sec=1671536616&t=fecb0589880263aadf3ce1b04cde2497);
  background-size: cover;
  background-repeat: no-repeat;
  height: 30vh;
  padding-top: 10px;
}
.user-box .login-active .user-info-wrap .user-login .user-unlogin-img {
  width: 70px;
  height: 70px;
  display: block;
  border-radius: 999px;
  margin: 30px auto 0;
  overflow: hidden;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.5);
}
.user-box .login-active .user-info-wrap .user-login .login {
  height: 30px;
  border-radius: 999px;
  color: #ddd;
  font-size: 18px;
  margin: 20px auto 0;
  text-align: center;
  line-height: 30px;
}
.user-box .login-active .content-box {
  position: fixed;
  top: 29vh;
  left: 0;
  width: 100%;
  height: 70vh;
}
.user-box .login-active .content-box .user-content {
  display: flex;
  justify-content: space-between;
  text-align: center;
  background-color: #fff;
  border-radius: 10px;
  margin: 0 10px 10px;
  padding: 10px;
}
.user-box .login-active .content-box .user-content .num {
  color: #c72f1e;
}
.user-box .login-active .content-box .user-other {
  background-color: #fff;
  border-radius: 10px;
  margin: 20px 10px 0;
}
.user-box .login-active .content-box .user-other .info {
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #ddd;
  padding: 0 15px;
}
.user-box .login-active .content-box .user-other .info:last-child {
  border: 0;
}

