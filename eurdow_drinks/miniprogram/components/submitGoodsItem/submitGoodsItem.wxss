
.goods-item {
  display: flex;
  width: 100%;
  padding: 10rpx 0;
  height: 160rpx;
}

.info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  padding:10rpx 20rpx 1rpx 4rpx;
}

.pic {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  overflow: hidden;
  border-radius: 10rpx;
  display: flex;
  align-items: end;
}


.name {
  padding-top: 4rpx;
  margin-bottom: 4rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.describe {
  color: #aaa;
  font-size: 22rpx;
}

.count-box {
  display: flex;
  align-items: end;
  justify-content: space-between;
}

.num{
  font-size: 24rpx;
  padding: 10rpx;
}
