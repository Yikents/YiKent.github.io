.order-empty{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.order-img{
  width:330rpx;
  height:330rpx;
  background-image: url(https://636c-cloud1-2g9ol1w699eb1c84-1314595113.tcb.qcloud.la/index-images/img_empty_order.png?sign=398175a0173b2f253a1c7e79d4eca272&t=1667655912);
  background-size:contain;
  background-repeat: no-repeat;
  background-position: center center;
}
.order-empty>.order-text{
  font-size:22rpx;
  color:#888;
}
.order-empty>.order-button{
  margin-top:40rpx;
  padding:20rpx 40rpx;
  background:red;
  color:#fff;
  font-size:30rpx;
  border-radius: 10rpx;
}

.history-record-container{
  position: absolute;
   top:100rpx;
   bottom:0rpx;
   left:0rpx;
   right:0rpx;
   overflow: scroll;
   background:#efefef73;
 }
 .history-record-container::-webkit-scrollbar{
   width:0rpx;
   height:0rpx;
 }
 .history-record-list{
   box-sizing: border-box;
   width:100%;
   padding:30rpx;
 }
 .history-record-item{
   box-sizing: border-box;
   padding:20rpx;
   width:100%;
   background:#fff;
   border-radius: 20rpx;
   margin-bottom:30rpx;
 }
 .record-item-header{
   display:flex;
   justify-content: space-between;
   align-items: center;
   height:40rpx;
 }
 .item-header-left{
  display: flex;
  align-items: center;
   font-size:28rpx;
 }
 .l-store{
   margin-right:10rpx;
 }
 .item-header-right{
   font-size:30rpx;
   color:#777;
 }
 .record-item-tips{
   display: flex;
   align-items: center;
   height:30rpx;
   font-size:23rpx;
   color:red;
 }
 .tips-txt{
   display: flex;
   margin-left: 10rpx;
 }
 .m-i-t{
   width:20rpx;
   height:20rpx;
   margin:0rpx 2rpx;
   border-radius: 9999rpx;
   border:1rpx solid red;
 }
 .record-item-goods{
   box-sizing: border-box;
   margin:20rpx 0rpx;
   width:100%;
   display:flex;
   align-items: center;
 }
 .item-goods-img{
   width:120rpx;
   height:120rpx;
   margin:0rpx 10rpx;
   border-radius: 10rpx;
 }
 .auto-img{
  display:block;
  width:100%;
  height:100%;
}
 .record-item-footer{
   display: flex;
   justify-content: space-between;
   align-items: center;
 }
 .item-footer-time{
   font-size:25rpx;
   color:#777;
 }
 .item-footer-pay{
   display: flex;
   align-items: center;
 }
 .footer-pay-number{
   font-size:25rpx;
   color:#777;
   margin-right:16rpx;
 }
 .footer-pay-price{
   font-size:30rpx;
 }