/* pages/index/index.wxss */
.index-container {
  width: 100vw;
  height: 100vh;
  background: #f6f6f6;
}

.index-header {
  position: relative;
  height: 400rpx;
  /* background:red; */
}

.swiper-item {
  width: 100vw;
  height: 500rpx;
  overflow: hidden;
  /* border-radius: 0rpx 0rpx 10rpx 10rpx; */
}

.swiper-item image {
  width: 100%;
  height: 100%;
  display: block;
}


.wx-swiper-dots {
  margin-bottom: 60rpx;
  left: 80rpx !important;
}

.index-header-item {
  box-sizing: border-box;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: space-between;
  left: 0rpx;
  right: 0rpx;
  bottom: -200rpx;
  margin: 0rpx auto;
  width: calc(100% - 60rpx);
  height: 140rpx;
  border-radius: 20rpx;
  background: #fff;
  padding: 30rpx;
  box-shadow: 0px 1px 3px rgba(204, 204, 204, 0.664);
}

.index-header-left {
  display: flex;
  align-items: center;
}

.header-left-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.header-left-image>.left-img {
  width: 80rpx;
  height: 80rpx;
}

.header-text-top {
  font-size: 30rpx;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
}

.header-text-bottom {
  font-size: 20rpx;
  color: #999;
}

.index-header-right {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.header-right-coin,
.header-right-discount {

  margin: 0rpx 20rpx;
}

.header-right-coin-count,
.header-right-discount-count {
  font-size: 30rpx;
  font-weight: bold;
}

.header-right-coin-text,
.header-right-discount-text {
  font-size: 20rpx;
  color: #999;
}

.index-body {
  margin-top: 200rpx;
  padding: 20rpx 40rpx;
}

.index-body-item {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.body-retrieval,.body-food {
  flex:1;
  height: 340rpx;
  border-radius: 20rpx;
  box-shadow: 0px 6px 10px rgba(204, 204, 204, 0.5);
}
.body-retrieval{
  box-sizing: border-box;
  margin-right: 40rpx;
  padding-top:40rpx;
  padding-left:20rpx;
  background-image:url(https://636c-cloud1-2g9ol1w699eb1c84-1314595113.tcb.qcloud.la/index-images/img_order_inshop.png?sign=ff5e92c66e14660b4231ab888be748ae&t=1667650504);
  background-size:cover;
  background-position: center center;
  background-repeat: no-repeat;
}
.body-food{
  box-sizing: border-box;
  padding-top:40rpx;
  padding-left: 20rpx;
  background-image:url(https://636c-cloud1-2g9ol1w699eb1c84-1314595113.tcb.qcloud.la/index-images/img_takeout_anim1.png?sign=16e42411575953cf99aea6bf87c8cfb4&t=1667650546);
  background-size:cover;
  background-position: center center;
  background-repeat: no-repeat;
}
.body-retrieval-title,.body-food-title{
  font-size:36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.body-retrieval-text,.body-food-text{
  font-size:24rpx;
  color:#777;
}
.body-food{
  background-color: #fff9f9;
}
.index-body-select{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.body-s-d{
  box-sizing: border-box;
  flex:1;
  padding-top: 20rpx;
  height:180rpx;
  text-align: center;
  border-radius: 10rpx;
  box-shadow: 0rpx 6rpx 10rpx rgba(128, 128, 128, 0.2);
  font-size:32rpx;
  font-weight: bold;
  background:rgba(255, 255, 255, 0.8);
}
.body-select-drink{
  background-image: url(https://636c-cloud1-2g9ol1w699eb1c84-1314595113.tcb.qcloud.la/index-images/anim_menu_frame_1.png?sign=17977716a986ac556c8a4c210f296efa&t=1667650925);
  background-size: 120rpx;
  background-repeat: no-repeat;
  background-position: right bottom;
}
.body-select-welfare{
  margin:0rpx 20rpx;
  background-image: url(https://636c-cloud1-2g9ol1w699eb1c84-1314595113.tcb.qcloud.la/index-images/img_driver_king.png?sign=03bf26dac1b34a9a1ef5ec2ea159c895&t=1667650830);
  background-size: 150rpx;
  background-repeat: no-repeat;
  background-position: right bottom;
}
.body-select-exchange{
  background-image: url(https://636c-cloud1-2g9ol1w699eb1c84-1314595113.tcb.qcloud.la/index-images/icon_level_figure_4.png?sign=7f47c7143e5496572d237d03f4f5bf5d&t=1667650767);
  background-size: 100rpx;
  background-repeat: no-repeat;
  background-position: right bottom;
}