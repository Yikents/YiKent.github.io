/* pages/submitorder/submitorder.wxss */
.index-submit {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  background-color: #f7f7f7;
}

.index-submit-navigation {
  display: flex;
  position: sticky;
  top: 0;
  align-items: flex-end;
  justify-content: space-between;
  height: 11vh;
  background: #fff;
  z-index: 3;
}

.index-submit-title {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 2vh;
  justify-content: center;
}

.submit-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 42rpx;
  height: 42rpx;
  margin: 0rpx 20rpx;
}

.main {
  position: relative;
  padding-bottom: 400rpx;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  z-index: -1;
}

.submit-header {
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 30rpx 0;
}

.navback-btn {
  position: absolute;
  left: 0;
  font-size: 18px;
}

.order-card {
  padding: 20rpx 40rpx;
  position: relative;
}

.shop-title {
  position: relative;
  padding: 0 20rpx 20rpx;
  color: red;
  background-color: #eee;
  border-top-right-radius: 20rpx;

}

.shop-title>image {
  position: absolute;
  display: block;
  top: -20rpx;
  left: 0;
  width: 251rpx;
  height: 86rpx;
  z-index: 1;
}

.shop-title>text {
  position: relative;
  z-index: 2;
  padding-top: -10rpx;
}

.order-card-header {
  border-radius: 20rpx;
}

.jul-text {
  position: absolute;
  top: 15rpx;
  right: 300rpx;
  color: #777;
  font-size: 12px;
}

.order-address {
  font-size: 14px;
  background-color: #fff;
  padding: 20rpx 20rpx;
  border-bottom: 1px solid #fff;
}

.address-sub-title {
  color: #777;
}

.gettime {
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.gettime-picker {
  display: flex;
}

.picker{
  color: red;
}

.shop-cart-box {
  margin: 0 40rpx;
  padding: 10rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.coupon-bar{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  font-size: 14px;
  color: #777;
}
.goods-list{
  overflow: hidden;

}
.cut-line{
  border-bottom: 1px dashed #ddd;
  width: 640rpx;
  margin: 10rpx 0;
}

.open-flot-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #777;
}

.count-bar{
  overflow: hidden;
}

.count-box{
  float: right;
  display: flex;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
}

.price-count{
  font-weight: bold;
}



.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 710rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:20rpx 20rpx 30rpx;
  background-color: #fff;
}

.final-price{
  font-weight: bold;
  font-size: 18px;
}

.note-box{
  margin: 40rpx;
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 20rpx;
  align-items: center;
  font-size: 14px;
}

.note-face{
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 4;
  background-color: #fff;
}

.nav-arrow-box{
  position: absolute;
  left: 20rpx;
}

.note-input-box{
  background-color: #ddd;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  position: relative;
}

.text-count-box{
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  font-size: 14px;
}

.note-submit-btn{
  margin: 40rpx;
  padding: 30rpx;
  background-color: #e60012;
  color: #fff;
  display: flex;justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}

