/* pages/userDetail.wxss */
.user-detail-view {
  padding: 70rpx 30rpx 0;
  background-color: #fff;
  font-size: 32rpx;
  height: 100vh;
  box-sizing: border-box;
}

.nav {
  display: flex;
  font-size: 36rpx;
}

.nav-text {
  margin-left: 30rpx;
}

.icon {
  padding: 80rpx 0;
  width: 220rpx;
  height: 220rpx;
  border-radius: 999px;
  margin: 0 auto;
}

.icon image {
  width: 100%;
  height: 100%;
  display: block;
}

.item {
  display: flex;
  align-items: center;
  height: 100rpx;
}

.item-text1 {
  width: 120rpx;
  color: #999;
}

.item-text3 {
  margin-left: auto;
  color: red;
}

radio {
  margin-right: 40rpx;
}

.save {
  text-align: center;
  padding: 20rpx 0;
  background-color: #e50014;
  color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}