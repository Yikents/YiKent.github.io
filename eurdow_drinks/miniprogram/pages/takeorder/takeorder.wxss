/* pages/takeorder/takeorder.wxss */
.take-order-page {
  width: 750 rpx;
  height: 100vh;
  overflow: hidden;
  position: relative;
  
}

.back-btn{
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.custom{
  width: 100%;
  height: 100rpx;
  /* background: #c00; */
  z-index: 999;
  background: #fff;
  display: flex;
  align-items: center;
}
.nav_logo{
  float: left;
  display: block;
  width:61rpx;
  height:47rpx;
}
.navInput{
  width: 410rpx;
  height: 58rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 20rpx;
  background: #eeeeee;
  border-radius: 40rpx;
  position: relative;
  display: flex;
  align-items: center;
  
}

.goods-info{
  display: flex;
  padding-bottom: 20px;
}

.navInput input{
  width: 100%;
  background: #eeeeee;
  font-size: 22rpx;
}
.custom text{
  display: inline-block;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  max-width: 280rpx;
}
.empty_custom{
  width: 100%;
}

.food-safety-info {
  line-height: 2;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #fff;
  font-size: 12px;
}

.main {
  position: absolute;
  display: flex;
  width: 750rpx;
  height: calc(100vh - 150px);

}

.goods-type-title {
  padding: 10rpx;
}

.side-bar {
  width: auto;
}

.content {
  flex-grow: 1;
  height: auto;
  background-color: #fff;
}

.item-title{
  font-size: 14px;
  padding: 60rpx 8rpx;
}

.cont-pro {
  height: 100%;
  display: flex;
  background-color: #fff;
}

.pro-left {
  width: 160rpx;
  flex-basis: 160rpx;
  background-color: #f6f6f6;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
}

.pro-title {
  position: relative;
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pro-right {
  flex: 1;
  background-color: #fff;
  overflow-y: scroll;
}


.pro-tag text {
  padding: 4rpx 10rpx;
  background-color: rgba(240, 141, 49, 0.15);
  margin-right: 10rpx;
  border-radius: 2rpx;
}

.pro-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tabs-active{
  background-color: #fff;
}

.tabs-active::after{
  content: '';
  width: 5rpx;
  height: 80rpx;
  background-color: red;
  position: absolute;
  left: 0;
  top: 10rpx;
}

.shop-bag{
  width: 90rpx;
  height: 90rpx;
}

.info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  padding:10rpx 20rpx 1rpx 4rpx;
}

.pic {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  overflow: hidden;
  border-radius: 10rpx;
  display: flex;
  align-items: end;
}


.name {
  margin-bottom: 4rpx;
  font-weight: bold;
  font-size: 14px;

}

.describe {
  color: #aaa;
  font-size: 12px;
}

.price {
  display: flex;
  align-items: end;
  justify-content: space-between;
  margin-top: 20rpx;
}

.price-text {
  font-size: 24px;
  font-weight: bold;
  color: #000;
}

.stepper {
  display: flex;
  align-items: center;
}

.count-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  width: 1rem;
  height: 1rem;
  border: 1px #e60011 solid;
}

.add-btn {
  color: #ffffff;
  background-color: #e60011;
}

.num{
  font-size: 12px;
  padding: 10rpx;
}

.cut-btn{
  color: #e60011;
}
.goods-chose-box{
  width: 600rpx;
  padding: 40rpx;
}

.taste-type-item{
  display: flex;
}

.taste-type-tab{
  padding: 10rpx;
  border: 1px #aaa solid;
  width: 120rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 20rpx;
}
.taste-type-tab.active{
  border: #e60011 1px solid;
  color: #e60011;
  background-color: #fff7f8;

}

.taste-type-list{
  color: #333;
  padding-bottom: 20rpx;
  font-size: 12px;
}
.taste-type-title{
  padding: 10rpx;
}

.number-tip{
  min-width: 34rpx;
  height: 34rpx;
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
}
.number-tip>image{
  position: absolute;
  display: block;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.number-tip>.tip-text{
  position: relative;
  font-size: 10px;
  line-height: 34rpx;
  z-index: 2;
  color: #fff;
  padding: 0 10rpx;
}
.swiper{
  width: calc(100% - 40rpx);
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.swiper-img{
  width: 100%;
  height: 100%;
}

.shop-popup-box{
  padding: 20rpx;
}

.shop-popup-header{
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shop-popup-header>.shop-popup-title{
  font-size: 18px;
  font-weight: bold;
}

.clear-shopCart-btn{
  font-size: 14px;
  color: #777;
}

.shopCart-list{
  max-height: 750rpx;
  padding-bottom: 100rpx;
  overflow: auto;
}

.search-layer{
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
  z-index: 10;
  background-color: #fff;
}



.index-search-navigation {
  display: flex;
  position: sticky;
  align-items: flex-end;
  justify-content: space-between;
  height: 11vh;
  background: #fff;
  z-index: 3;
  box-sizing: border-box;
  padding: 1px;
}

.index-search-title {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 2vh;
  justify-content: center;
}

.nav-arrow-box {
  display: flex;
  position: absolute;
  left: 20rpx;
  align-items: center;
  justify-content: center;
  width: 42rpx;
  height: 42rpx;
  margin: 0rpx 20rpx;
}