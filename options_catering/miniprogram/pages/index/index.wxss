.index {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  overflow: scroll;
}
.index::-webkit-scrollbar{
  width:0px;
  height:0px;
}

.index-background {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.index-text {
   
  align-items: center;
  display: flex;
  margin: 0px 20px;
  margin-top: 7vh;
  height: 100px;
}

.index-text-img {
  width: 66px;
  height: 66px;
}

.index-image {
  width: 66px;
  height: 66px;
}

.index-text-text {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10px;
  align-items: center;
  width: 250px;
  height: 70px;
  /* background-color: palegreen; */
}

.text-top {
  font-size: 14px;
  margin-top: 10px;
}

.text-bottom {
  font-weight: bold;
  font-size: 18px;
  margin-bottom: 10px;
}

.shuffling {
  overflow: hidden;
  border-radius: 10px;
}

.home-swiper {
  width: 90%;
  margin: 0 auto;
  height: 460rpx;
  border-radius: 10px;
  overflow: hidden;
  background-position: center;
  background-size: cover;
}

swiper-item {
  border-radius: 10px;
  overflow: hidden;
}

.slide-image {
  width: 100%;
  border-radius: 10px;
  overflow: hidden;
}

.index-shop {
  display: flex;
  margin: 20px;
  height: 120px;
  border-radius: 10px;
  background-color: white;
  box-shadow: 1px 0px 10px #bbb;
}

.index-shop-left {
  width: 65%;
  height: 100%;
}

.index-stores {
  width: 100%;
  height: 30%;
  display: flex;
}

.index-stores-img {
  width: 24px;
  height: 24px;
  margin: 10px;
}

.imge-house {
  width: 100%;
  height: 100%;
}

.index-stores-name {
  width: 136px;
  height: 24px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-top: 12px;
  font-size: 16px;
}

.index-place {
  width: 100%;
  height: 30%;
  overflow: hidden;
  display: flex;
}

.index-place-icon {
  width: 24px;
  height: 24px;
  margin: 9px;
}

.index-place-icon-id {
  width: 24px;
  height: 24px;
}

.index-place-name {
  font-size: 14px;
  margin: 0px 2px;
  font-weight: 100;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #bbb;
}

.index-time {
  display: flex;
  width: 100%;
  height: 30%;
}

.index-time-icon {
  width: 24px;
  height: 24px;
  margin: 10px;
}

.index-time-icon-id {
  width: 24px;
  height: 24px;
}

.index-time-name {
  margin: 12px 0;
  font-size: 14px;
  font-weight: 100;
  color: #bbb;
}

.index-header-right {
  display: flex;
  flex-wrap: wrap;
  width: 35%;
  height: 100%;

}

.index-header-right-top {
  width: 100%;
  height: 50%;
  box-sizing: border-box;
}

.index-header-right-bottom {
  width: 100%;
  height: 50%;
  box-sizing: border-box;
}

.index-nearly {
  width: 60px;
  height: 20px;
  /* margin-top: 10%;
    margin-left: 35%; */
  margin: 10% auto;
  padding: 2px;
  border-radius: 5px;
  text-align: center;
  line-height: 20px;
  font-size: 12px;
  background-color: #f8e6db;
  color: #e7bb6a;
}

.index-change {
  width: 80px;
  height: 20px;
  /* margin-top: 15%;
    margin-left: 18%; */
  margin: 15% auto;
  padding: 3px;
  border-radius: 999px;
  text-align: center;
  line-height: 20px;
  font-size: 13px;
  background-color: #4c4c4c;
  color: #dad4b2;
}

.index-order {
  display: flex;
  height: 130px;
  margin: 20px;
  border-radius: 10px;

  /* box-shadow: 1px 0px 10px #bbb; */
}

.index-menu {
  width: 45%;
  height: 100%;
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 1px 0px 10px #bbb;
}

.index-menu-icon {
  width: 60px;
  height: 60px;
  margin: 0px auto;
  margin-top: 5px;
}

.index-menu-image {
  width: 60px;
  height: 60px;
}

.index-menu-text-a {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  margin-top: -3px;
}

.index-menu-text-b {
  font-size: 12px;
  text-align: center;
  margin-top: 5px;
  color: #bbb;
}

.index-activity {
  width: 45%;
  height: 100%;
  margin-left: 10%;
  border-radius: 10px;
  /* border-left: 1px solid #bbb; */
  background-color: #bbb;
}

.index-activity-text-b {
  font-size: 12px;
  text-align: center;
  margin-top: 5px;
  color: white;
}

.map {
  margin: 20px;
}

map {
  width: 100%;
}