
.order-detail-header{
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
  height:11vh;
  padding-bottom: 20rpx;
  background:#fff;
}
.detail-header-arrow{
  width:60rpx;
  height:60rpx;
  font-size: 22px;

  line-height: 60rpx;
  text-align: center;
}
.detail-header-title{
  flex:1;
  text-align: center;
  margin-right: 30rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size:34rpx;
  font-weight: bold;
}
.order-detail-body{
  position: fixed;
  width:100%;
  top:11vh;
  bottom:0px;
  overflow: scroll;
}
.order-detail-body::-webkit-scrollbar{
  width:0rpx;
  height:0rpx;
}
.order-detail-box{
  width:100%;
}
.detail-body-pay{
  margin:40rpx;
}
.pay-status-header{
  display: flex;
  width:100%;
  height:80rpx;
  align-items: center;
  justify-content: center;
  font-size:34rpx;
  font-weight: bold;
  color:#e4393c;
}
.pay-status-button{
  display: flex;
  align-items: center;
  justify-content: center;
  height:100rpx;
}
.status-button-cancel{
  font-size:30rpx;
  padding:20rpx 40rpx;
  margin-right:30rpx;
  color:#fff;
  background:rgb(65, 62, 62);
}
.status-button-confirm{
  font-size:30rpx;
  padding:20rpx 40rpx;
  background:#e4393c;
  color:#fff;
}

.detail-body-store{
  margin:40rpx;
  padding:40rpx;
  border-radius: 10rpx;
  background:#fff;
}
.body-store-header{
  display: flex;
  align-items: center;
  height:80rpx;
}

.body-store-icon,.store-price-icon,.store-time-icon{
  width:60rpx;
  height:60rpx;
  margin-right:20rpx;
}
.store-price-icon,.store-time-icon{
  display: flex;
  align-items: center;
  justify-content: center;
  color:#ecca8a;
}
.auto-img{
  display: block;
  width:60rpx;
  height:60rpx;
}
.body-store-name{
  font-size: 36rpx;
  font-weight: bold;
}
.body-store-price{
  display: flex;
  align-items: center;
  margin:10rpx 0rpx;
}
.store-price-text,.store-time-text{
  font-size:30rpx;
  font-weight: bold;
}
.body-store-time{
  display: flex;
  align-items: center;
  height:80rpx;
}

.detail-body-list{
  margin:40rpx;
  padding:40rpx;
  border-radius: 10rpx;
  background:#fff;
}

.body-list-pot,.body-list-vege{
  border-bottom: 1px solid rgba(204, 204, 204, 0.3);
}
.list-pot-name,.list-vege-name{
  height:80rpx;
  line-height: 80rpx;
  font-size:36rpx;
  font-weight: bold;
}
.pot-container-item,.vege-container-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height:80rpx;
}
.container-item-name{
  width:260rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size:32rpx;
}
.container-item-count{
  font-size:32rpx;
}
.container-item-price{
  font-size: 32rpx;
  font-weight: bold;
}
.body-footer-price{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height:80rpx;
}
.footer-price-left{
  font-size:36rpx;
  font-weight: bold;
}
.footer-price-right{
  font-size:32rpx;
  font-weight: bold;
}