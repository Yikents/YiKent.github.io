/* pages/message/message.wxss */
.message {
    width: 100%;
    height: 100%;
}
.message-background{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: -1;
}


.message-header {
    height: 100px;
    margin:12vh 20px 0px 20px;
    border-radius: 10px;
    box-shadow: 1px 0px 10px #bbb;
}

.message-img {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
}

.img {
    display: flex;
    flex-wrap: wrap;
    width: 44px;
    height: 64px;
    margin: 0 auto;
}
.message-image{
    width: 44px;
    height: 44px;
}

img {
    width: 44px;
    height: 44px;
    /* background-color: black; */
}

text {
    width: 100%;
    font-size: 12px;
    text-align: center;
}

.message-body {
    display: flex;
    flex-wrap: wrap;
    width: 100vw;
}

.message-body-text {
    display: flex;
    margin: 20px;
}

.text-left {
    width: 5px;
    height: 25px;
    border-radius: 5px;
    background-color: #f0303c;
}

.text-right {
    height: 25px;
    margin-left: 5px;
    line-height: 25px;
    font-size: 14px;
    font-weight: 600;
}

.message-body-img {
    display: flex;
    align-items: center;
    width: 100%;
    height: 60px;
    margin: 0 20px;
    margin-top: 10px;
    border-bottom: 1px solid#bbb;
}
.message-body-img-left{
    width: 44px;
    height: 44px;
    /* background-color: black; */
}
.message-body-img-left-text{
    margin-left: 10px;
    font-size:12px;
}
.message-body-img-right{
    position: absolute;
    right: 22px;
    font-weight: 200;
    font-size: 18px;
    color:#828282;
}
