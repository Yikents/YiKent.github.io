/* pages/index-activity/index-activity.wxss */
.index-activity{
  width: 100vw;
}
.index-activity-header{
  position: fixed;
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
  width:100%;
  height:11vh;
  padding-bottom: 20rpx;
  background:#fff;
  z-index: 999;
}
.activity-header-arrow{
  width:60rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size: 22px;
  text-align: center;
}
.activity-header-title{
  flex:1;
  text-align: center;
  margin-right: 30rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size:34rpx;
  font-weight: bold;
}
.index-activity-body{
  padding-top:11vh;
  width: 100vw;
  text-align: center;
  overflow: scroll;
}
.index-activity-body-image{
  width: 100vw;
  height: 80px;
}
.image-hai-background{
  width: 100%;
  height: 80px;
}
index-activity-body-list{
  width: 100%;
  height: 40px;
  
}
.index-activity-body-text{
  position: relative;
  text-align: center;
  margin: 0 auto;
  width: 250px;
  height: 30px;
  line-height: 30px;
  padding: 15px;
  font-size: 16px;
}
.text-icon{
  position: absolute;
  top:17px;
  left:105px ;
  width: 20px;
  height: 30px;
}
.text-image{
  width: 20px;
  height: 30px;
}
.corporate-culture{
  width: 300px;
  margin: 0 auto;
  line-height: 25px;
  font-size: 14px;
  text-align: center;
  color: #888;

}
.mine-body{
  height: 450px;
 margin-top: 20px;


  
}
.body-container-item{
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100vw;
  padding-bottom: 10px;
  padding-top:20rpx;
}
.container-item-img{
  width:300px;
  height:200px;
  overflow: hidden;
  border-radius: 10px;
}
.container-item-text-header{
  font-weight: bold;
  color: #888;
}
.container-item-text{
  position: relative;
  width: 280px;
  height: 120px;
  margin: 0 auto;
  margin-top: 10px;
  padding: 10px 10px;
  margin-bottom:40px ;
  line-height: 25px;
  font-size: 14px;
  color: #888;
  border-radius: 10px;
  box-shadow: 1px 0px 10px #bbb;

}

